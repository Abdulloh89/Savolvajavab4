<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/whole_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon3"
    android:focusableInTouchMode="false"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity">


    <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
        android:id="@+id/moneyPanelTextView"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/panelLayout"
        android:layout_alignLeft="@+id/panelLayout"
        android:layout_alignRight="@+id/panelLayout"
        android:layout_alignStart="@+id/panelLayout"
        android:background="@drawable/money_panel"
        android:gravity="left|center"
        android:paddingLeft="45dp"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/panelLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/moneyPanelTextView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/head"
        android:gravity="bottom|left"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lifelinesLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="bottom">

            <!-- android:layout_below="@+id/moneyPanelTextView" -->

            <com.Islomdan.savolvajavab.fontpackage.MyButtonFont
                android:id="@+id/fiftyFiftyButton"
                style="@style/button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/p"
                android:textSize="12sp" />

            <com.Islomdan.savolvajavab.fontpackage.MyButtonFont
                android:id="@+id/askForAudienceButton"
                style="@style/button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/jam"
                android:textSize="12sp" />

            <com.Islomdan.savolvajavab.fontpackage.MyButtonFont
                android:id="@+id/changeQuestionButton"
                style="@style/button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/zam"
                android:textSize="12sp" />
        </LinearLayout>

        <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
            android:id="@+id/timerView"
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:gravity="left|center_vertical"
            android:text="TextView"
            android:textAlignment="gravity"
            android:textColor="#d10000" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_below="@+id/panelLayout"
        android:layout_centerHorizontal="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="200dp"
                        android:layout_height="195dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/stait"
                        android:focusableInTouchMode="false"
                        tools:context=".MenuActivity" />

                    <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
                        android:id="@+id/variant_c"
                        style="@style/button"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/variant_b"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/answer_option"
                        android:gravity="left|center_horizontal|center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:textColor="#fff"
                        android:textSize="24sp" />

                    <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
                        android:id="@+id/variant_d"
                        style="@style/button"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/variant_c"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/answer_option"
                        android:gravity="left|center_horizontal|center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:textColor="#fff"
                        android:textSize="24sp" />

                    <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
                        android:id="@+id/variant_b"
                        style="@style/button"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/variant_a"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/answer_option"
                        android:gravity="left|center_horizontal|center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:textColor="#fff"
                        android:textSize="24sp" />

                    <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
                        android:id="@+id/question_field"
                        style="@style/button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/quest"
                        android:gravity="center"
                        android:paddingBottom="12dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="24sp" />

                    <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
                        android:id="@+id/percentageTextViewC"
                        style="@style/button"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/variant_c"
                        android:layout_alignBottom="@+id/variant_c"
                        android:layout_alignLeft="@+id/percentageTextViewD"
                        android:layout_alignStart="@+id/percentageTextViewD"
                        android:background="@android:color/holo_orange_dark"
                        android:gravity="center_horizontal|center"
                        android:text="%3"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="bold|italic" />

                    <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
                        android:id="@+id/percentageTextViewB"
                        style="@style/button"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/variant_b"
                        android:layout_alignBottom="@+id/variant_b"
                        android:layout_alignLeft="@+id/percentageTextViewA"
                        android:layout_alignStart="@+id/percentageTextViewA"
                        android:background="@android:color/holo_orange_dark"
                        android:gravity="center_horizontal|center"
                        android:text="%2"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="bold|italic" />

                    <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
                        android:id="@+id/percentageTextViewD"
                        style="@style/button"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/variant_d"
                        android:layout_alignBottom="@+id/variant_d"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="36dp"
                        android:layout_marginRight="36dp"
                        android:background="@android:color/holo_orange_dark"
                        android:gravity="center_horizontal|center"
                        android:text="%4"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="bold|italic" />

                    <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
                        android:id="@+id/variant_a"
                        style="@style/button"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/question_field"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/answer_option"
                        android:gravity="left|center_horizontal|center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:textAlignment="gravity"
                        android:textColor="#fff"
                        android:textSize="24sp" />

                    <com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
                        android:id="@+id/percentageTextViewA"
                        style="@style/button"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/variant_a"
                        android:layout_alignBottom="@+id/variant_a"
                        android:layout_alignLeft="@+id/percentageTextViewC"
                        android:layout_alignStart="@+id/percentageTextViewC"
                        android:background="@android:color/holo_orange_dark"
                        android:gravity="center_horizontal|center"
                        android:text="%1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="bold|italic" />

                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>


</RelativeLayout>