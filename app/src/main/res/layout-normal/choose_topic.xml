<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:contentDescription="https://play.google.com/store/apps/details?id=uzdasturlar.fiqhmasalalari"
		android:text="https://play.google.com/store/apps/details?id=uzdasturlar.fiqhmasalalari"
		android:textAppearance="@style/TextAppearance.AppCompat.Headline"
		tools:text="https://play.google.com/store/apps/details?id=uzdasturlar.fiqhmasalalari" />

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:background="@drawable/fon9"
		android:cropToPadding="false" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/chooseTopicLayout">

		<com.Islomdan.savolvajavab.fontpackage.MyButtonFont
			android:id="@+id/menuExitBtn"
			style="@style/button"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignLeft="@+id/menuSettingsBtn"
			android:layout_alignStart="@+id/menuSettingsBtn"
			android:layout_alignTop="@+id/menuSettingsBtn"
			android:layout_marginBottom="12dp"
			android:layout_marginEnd="60dp"
			android:layout_marginLeft="120dp"
			android:layout_marginTop="0dp"
			android:background="@drawable/chiqish"
			android:textColor="#fff"
			android:textSize="24sp" />

		<com.Islomdan.savolvajavab.fontpackage.MyButtonFont
			android:id="@+id/menuSettingsBtn"
			style="@style/button"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignEnd="@+id/playThematicGameButton"
			android:layout_alignRight="@+id/playThematicGameButton"
			android:layout_below="@+id/playThematicGameButton"
			android:layout_marginBottom="0dp"
			android:layout_marginEnd="90dp"
			android:layout_marginRight="80dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/sozlama"
			android:textColor="#fff"
			android:textSize="24sp"
			tools:text=" " />

		<com.Islomdan.savolvajavab.fontpackage.MyButtonFont
			android:id="@+id/playThematicGameButton"
			style="@style/button"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="18dp"
			android:background="@drawable/start"
			android:textColor="#fff"
			android:textSize="24sp" />

	</RelativeLayout>

	<com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
		android:id="@+id/chooseTopicTextView"
		style="@style/button"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="10dp"
		android:layout_marginEnd="0dp"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginStart="0dp"
		android:layout_marginTop="70dp"
		android:background="@drawable/det"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="#fff" />


	<RelativeLayout
		android:id="@+id/chooseTopicLayout"
		android:layout_width="400dp"
		android:layout_height="60dp"
		android:orientation="horizontal"
		android:layout_below="@+id/chooseTopicTextView"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true">

		<com.Islomdan.savolvajavab.fontpackage.MyTextViewFont
			android:id="@+id/topicTextView"
			style="@style/button"
			android:layout_width="170dp"
			android:layout_height="360dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_marginEnd="5dp"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginStart="0dp"
			android:background="@drawable/kirillatin"
			android:gravity="center"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#fff"
			android:textSize="24sp" />

		<Button
			android:id="@+id/rightArrow"
			android:layout_width="50dp"
			android:layout_height="match_parent"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="12dp"
			android:layout_marginStart="12dp"
			android:layout_toEndOf="@+id/topicTextView"
			android:layout_toRightOf="@+id/topicTextView"
			android:background="@drawable/arrow_right" />

		<Button
			android:id="@+id/leftArrow"
			android:layout_width="50dp"
			android:layout_height="match_parent"
			android:layout_alignParentTop="true"
			android:layout_marginEnd="12dp"
			android:layout_marginRight="12dp"
			android:layout_toLeftOf="@+id/topicTextView"
			android:layout_toStartOf="@+id/topicTextView"
			android:background="@drawable/arrow_left" />

	</RelativeLayout>

</RelativeLayout>